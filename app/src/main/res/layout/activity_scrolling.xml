<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/collapsing">



    <include layout="@layout/motion_17_coordination_header"
        android:id="@+id/motionLayout"/>


    <include
        android:id="@+id/scrollable"
        layout="@layout/content_scrolling" />


    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_source_icon"
        app:layout_constraintBottom_toBottomOf="@+id/motionLayout"
        app:layout_constraintEnd_toEndOf="@id/motionLayout"
        app:layout_constraintTop_toBottomOf="@+id/motionLayout" />
</androidx.constraintlayout.motion.widget.MotionLayout>